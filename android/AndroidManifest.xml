<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.gnorsilva.android.myfridge"
	android:versionCode="1"
	android:versionName="1.0">

	<uses-sdk
		android:minSdkVersion="7" />

	<uses-permission
		android:name="android.permission.INTERNET" />

	<application
		android:icon="@drawable/icon"
		android:label="@string/app_name"
		android:theme="@style/WhatsInMyFridge">

		<activity
			android:name=".ui.AddedItemsActivity">
		</activity>

		<activity
			android:name=".ui.AddItemActivity">
		</activity>

		<activity
			android:name=".ui.DashboardActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity
			android:name=".ui.EditItemActivity">
		</activity>

		<activity
			android:name=".ui.ExpiringSoonActivity"
			android:label="@string/title_expiring_soon">
			<intent-filter>
				<action
					android:name="android.intent.action.VIEW" />
			</intent-filter>
		</activity>
<!--		
		<activity
		android:name="FRidgeActivity>
		<intent-filter>
		<action android:name="">
		</action>
		<data android:mimeType="vnd.android.cursor.item/vnda.myfridge.item" />
		</intent-filter>
		</activity>
	-->	

		<activity
			android:name=".ui.MyFridgeActivity"
			android:label="@string/title_my_fridge">
			<intent-filter>
				<action
					android:name="android.intent.action.VIEW" />
			</intent-filter>
		</activity>

		<activity
			android:name=".ui.RemoveItemsActivity"
			android:label="@string/title_remove_items">
			<intent-filter>
				<action
					android:name="android.intent.action.VIEW" />
			</intent-filter>
		</activity>

		<activity
			android:name=".ui.WebSearchResultsActivity">
		</activity>

	<provider
		android:name=".provider.MyFridgeProvider"
		android:authorities="com.gnorsilva.android.myfridge" />

	</application>
</manifest> 